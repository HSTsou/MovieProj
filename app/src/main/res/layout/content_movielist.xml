<com.example.handsome.thenewtest.util.CustomCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="4dp"
    app:cardCornerRadius="5dp"
   >

    <RelativeLayout
        android:id="@+id/text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/mv_pic"
            android:layout_width="85dp"
            android:layout_height="120dp"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:paddingBottom="4dp"
            android:paddingLeft="?android:listPreferredItemPaddingLeft"
            android:paddingTop="4dp" />
        <!--com.example.handsome.thenewtest.util.Chinese-->
        <TextView
            android:id="@+id/mvName_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/mv_pic"
            android:elevation="8dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:gravity="left"
            android:paddingLeft="?android:listPreferredItemPaddingLeft"
            android:singleLine="true"
            android:textColor="@android:color/primary_text_light"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/enName_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/mvName_text"
            android:layout_toRightOf="@+id/mv_pic"
            android:fontFamily="sans-serif-light"
            android:paddingLeft="?android:listPreferredItemPaddingLeft"
            android:singleLine="true"
            android:textColor="@android:color/primary_text_light"
            android:textSize="18sp"
            tools:text="Item" />

        <LinearLayout
            android:id="@+id/rating_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/mv_pic"
            android:paddingLeft="?android:listPreferredItemPaddingLeft"

            android:padding="@dimen/codelab_fab_margin_bottom">

            <ImageView
                android:id="@+id/IMDb_img"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/imdb_icon" />

            <TextView
                android:id="@+id/IMDbRating_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/IMDb_img"
                android:layout_toRightOf="@+id/IMDb_img"
                android:layout_gravity="center_vertical"
                android:textColor="@color/transparent_half"
                android:textSize="14sp"
                tools:text="IMDb" />

            <ImageView
                android:id="@+id/tomato_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/tomato_icon"
                android:paddingLeft="3dp"/>

            <TextView
                android:id="@+id/tomato_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tomato_img"
                android:layout_toRightOf="@+id/tomato_img"
                android:layout_gravity="center_vertical"
                android:textColor="@color/transparent_half"
                android:textSize="14sp"
                tools:text="tomatos" />

        </LinearLayout>

        <TextView
            android:id="@+id/playingDate_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:padding="@dimen/codelab_fab_margin_bottom"
            android:textColor="@color/transparent_half"
            android:textSize="14sp"
            tools:text="date" />
    </RelativeLayout>


</com.example.handsome.thenewtest.util.CustomCardView>

