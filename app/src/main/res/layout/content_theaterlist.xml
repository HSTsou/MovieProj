<com.example.handsome.thenewtest.util.CustomCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="4dp"
    app:cardCornerRadius="5dp"
    android:id="@+id/cardView_layout"
    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/th_info_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="left"
            android:layout_weight="2"
            android:layout_marginRight="5dp"
            >

            <TextView
                android:id="@+id/thName_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:gravity="left"
                android:paddingLeft="?android:listPreferredItemPaddingLeft"
                android:singleLine="true"
                android:textColor="@android:color/primary_text_light"
                android:textSize="21sp"
                tools:text="thTitle" />

            <TextView
                android:id="@+id/address_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:paddingLeft="?android:listPreferredItemPaddingLeft"
                android:singleLine="true"
                android:textColor="@android:color/tertiary_text_dark"
                android:textSize="18sp"
                tools:text="address" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/distance_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:layout_weight="5"
            >

            <TextView
                android:id="@+id/distance_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="top|right"
                android:textColor="@android:color/tertiary_text_dark"
                android:textSize="16sp"

                tools:text="distance"
                android:layout_marginRight="5dp"
                android:textStyle="bold"
                android:layout_gravity="right" />

        </LinearLayout>

    </LinearLayout>




</com.example.handsome.thenewtest.util.CustomCardView>

